@model IEnumerable<PAWScrum.Models.DTOs.ActivityLog.ActivityLogResponseDto>
@{
    ViewData["Title"] = "Activity Log";
    var items = Model ?? Enumerable.Empty<PAWScrum.Models.DTOs.ActivityLog.ActivityLogResponseDto>();
    int? projectId = ViewBag.ProjectId as int?;
    int? userId = ViewBag.UserId as int?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Activity Log</h2>

    <form asp-controller="ActivityLog" asp-action="Index" method="get" class="d-flex gap-2">
        <input name="projectId" class="form-control form-control-sm" type="number" min="0"
               placeholder="ProjectId" value="@(projectId?.ToString() ?? "")" />
        <input name="userId" class="form-control form-control-sm" type="number" min="0"
               placeholder="UserId" value="@(userId?.ToString() ?? "")" />
        <button class="btn btn-sm btn-primary" type="submit">Filter</button>
    </form>
</div>

@if (projectId is not null)
{
    <p class="text-muted small">Project ID: @projectId</p>
}
@if (userId is not null)
{
    <p class="text-muted small">User ID: @userId</p>
}

@if (!items.Any())
{
    <div class="alert alert-light border">No activity found.</div>
}
else
{
    <table class="table table-striped table-sm align-middle">
        <thead>
            <tr>
                <th>User</th>
                <th>Project</th>
                <th>Action</th>
                <th class="text-nowrap">Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in items)
            {
                <tr>
                    <td>@(log.UserName ?? "-")</td>
                    <td>@(log.ProjectName ?? "-")</td>
                    <td>@log.Action</td>
                    <td class="text-nowrap">@log.Timestamp.ToLocalTime().ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="d-flex gap-2">
    <a asp-controller="ActivityLog" asp-action="Recent"
       asp-route-projectId="@(projectId ?? 0)" class="btn btn-outline-secondary btn-sm">
        Recent for project @(projectId ?? 0)
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
</div>
