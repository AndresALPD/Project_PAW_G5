@model IEnumerable<PAWScrum.Models.DTOs.ActivityLog.ActivityLogResponseDto>
@{
    ViewData["Title"] = "Recent Activity";
    var items = Model ?? Enumerable.Empty<PAWScrum.Models.DTOs.ActivityLog.ActivityLogResponseDto>();
    int projectId = (int)(ViewBag.ProjectId ?? 0);
}

<h2 class="mb-3">Recent Activity @if (projectId>0){
<text>for Project @projectId</text>
}
</h2>

@if (!items.Any())
{
    <div class="alert alert-light border">No recent activity.</div>
}
else
{
    <table class="table table-striped table-sm align-middle">
        <thead>
            <tr>
                <th>User</th>
                <th>Action</th>
                <th class="text-nowrap">Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in items)
            {
                <tr>
                    <td>@(log.UserName ?? "-")</td>
                    <td>@log.Action</td>
                    <td class="text-nowrap">@log.Timestamp.ToLocalTime().ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="d-flex gap-2">
    <a asp-controller="ActivityLog" asp-action="ByProject" asp-route-projectId="@projectId"
       class="btn btn-outline-secondary btn-sm">View All Logs</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
</div>
