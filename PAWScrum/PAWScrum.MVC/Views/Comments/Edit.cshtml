@model PAWScrum.Models.DTOs.Comments.CommentCreateDto

@{
    ViewData["Title"] = "Edit Comment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h4 class="mb-0">✏️ Edit Comment</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="id" value="@ViewBag.CommentId" />

                        <div class="mb-3">
                            <label asp-for="TaskId" class="form-label fw-bold">Task</label>
                            <input asp-for="TaskId" class="form-control" readonly />
                            <span asp-validation-for="TaskId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-bold">User</label>
                            <input asp-for="UserId" class="form-control" readonly />
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Text" class="form-label fw-bold">Comment</label>
                            <textarea asp-for="Text" rows="4" class="form-control" placeholder="Edit your comment here..."></textarea>
                            <span asp-validation-for="Text" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">← Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">💾 Save Changes</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
