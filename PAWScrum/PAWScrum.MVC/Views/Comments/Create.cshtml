@model PAWScrum.MVC.Models.Comments.CommentCreateViewModel
@{
    ViewData["Title"] = "New Comment";
}

<h3 class="mb-3">New Comment</h3>

<form asp-action="Create" asp-controller="Comments" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="TaskId" />
    <!-- opcional si aún no tomas el userId de los claims -->
    <input type="hidden" asp-for="UserId" value="0" />

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Comment</label>
        <textarea asp-for="Content" rows="4" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary"
           asp-action="Index"
           asp-route-taskId="@Model.TaskId">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
