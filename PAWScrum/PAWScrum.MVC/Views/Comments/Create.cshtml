@model PAWScrum.Models.DTOs.Comments.CommentCreateDto
@{
    ViewData["Title"] = "Add Comment";
}

<h2>Add Comment for Task @ViewBag.TaskId</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="WorkTaskId" value="@ViewBag.TaskId" />
    <div class="form-group">
        <label>Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>User ID</label>
        <input asp-for="UserId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" asp-route-taskId="@ViewBag.TaskId" class="btn btn-secondary">Cancel</a>
    <a asp-controller="ActivityLog" asp-action="ByProject" asp-route-projectId="@ViewBag.TaskId" class="btn btn-info">View Task Logs</a>
</form>
