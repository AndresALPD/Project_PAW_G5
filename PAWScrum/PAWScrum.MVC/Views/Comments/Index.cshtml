@model IEnumerable<PAWScrum.Models.DTOs.Comments.CommentResponseDto>

@{
    ViewData["Title"] = "Comments";
}

<h2>Comments</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Task</th>
            <th>User</th>
            <th>Text</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CommentId</td>
                <td>@item.TaskId</td>
                <td>@item.UserName (@item.UserId)</td>
                <td>@item.Text</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">New</a>
