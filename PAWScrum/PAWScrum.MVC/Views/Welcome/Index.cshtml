@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Welcome - PAWScrum</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/welcome.css" />
</head>
<body>
    <div class="welcome-container text-center">
        <div class="welcome-card">
            <h1 class="mb-3">Welcome to <strong>PAWScrum</strong></h1>
            <p class="lead mb-4">Manage your projects, collaborate with your team, and stay productive like never before.</p>
            <div class="illustration mb-4">
                <i class="fas fa-tasks fa-5x text-light"></i>
            </div>
            <div class="d-flex justify-content-center gap-3">
                <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Login">
                    <i class="fas fa-sign-in-alt me-2"></i> Login
                </a>
                <a class="btn btn-outline-light btn-lg" asp-controller="Account" asp-action="Register">
                    <i class="fas fa-user-plus me-2"></i> Register
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
