@using PAWScrum.Models.DTOs.Tasks
@model TaskResponseDto
@{
    ViewData["Title"] = "Delete Task";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card shadow-lg rounded-3" style="width: 28rem;">
        <div class="card-body text-center">
            <h3 class="card-title text-danger mb-3">
                <i class="bi bi-exclamation-triangle-fill"></i> Delete Task
            </h3>
            <p class="fs-5">
                Are you sure you want to delete the task <br />
                <b>@Model.Title</b>?
            </p>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
