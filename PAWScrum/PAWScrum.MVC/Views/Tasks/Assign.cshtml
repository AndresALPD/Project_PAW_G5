@using PAWScrum.Models.DTOs.Tasks
@model TaskResponseDto
@{
    ViewData["Title"] = "Assign User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Assign User to Task</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center mb-4">Task: <span class="fw-bold">@Model.Title</span></h5>

                    <form asp-action="Assign" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Select User</label>
                            <select name="userId" class="form-select">
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.Name</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">← Back</a>
                            <button type="submit" class="btn btn-success px-4">✅ Assign</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
