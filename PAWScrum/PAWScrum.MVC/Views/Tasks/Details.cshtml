@using PAWScrum.Models.DTOs.Tasks
@model TaskResponseDto
@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Title</h3>
        </div>
        <div class="card-body">
            <p class="mb-3">
                <strong>Description:</strong><br />
                @Model.Description
            </p>

            <p>
                <strong>Estimation Hours:</strong> @Model.EstimationHours
            </p>

            <p>
                <strong>Assigned User:</strong> @Model.AssignedUserName
            </p>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
            <div>
                <a asp-controller="Comments" asp-action="Index" asp-route-taskId="@Model.Id" class="btn btn-info me-2">
                    <i class="bi bi-chat-left-text"></i> View Comments
                </a>
                <a asp-controller="ActivityLog" asp-action="Recent" asp-route-projectId="1" class="btn btn-dark">
                    <i class="bi bi-clock-history"></i> View Recent Activity
                </a>
            </div>
        </div>
    </div>
</div>


