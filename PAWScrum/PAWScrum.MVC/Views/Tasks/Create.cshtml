@using PAWScrum.Models.DTOs.Tasks
@model TaskCreateDto

@{
    ViewData["Title"] = "Create Task";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i> Create New Task
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" rows="3" class="form-control" placeholder="Enter task description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstimationHours" class="form-label fw-bold"></label>
                                <input asp-for="EstimationHours" type="number" class="form-control" min="1" placeholder="Estimated hours" />
                                <span asp-validation-for="EstimationHours" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductBacklogItemId" class="form-label fw-bold">Product Backlog Item</label>
                                <input asp-for="ProductBacklogItemId" type="number" class="form-control" placeholder="Backlog Item ID" />
                                <span asp-validation-for="ProductBacklogItemId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Save Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

