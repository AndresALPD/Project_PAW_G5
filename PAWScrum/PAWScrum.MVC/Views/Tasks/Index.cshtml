@using PAWScrum.Models.DTOs.Tasks
@model IEnumerable<TaskResponseDto>
@{
    ViewData["Title"] = "Tasks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📋 Tasks</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            ➕ Create Task
        </a>
    </div>

    <div class="row g-4">
        @foreach (var task in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 h-100 rounded-3">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark mb-2">@task.Title</h5>
                        <p class="text-muted small mb-3">@task.Description</p>

                        <div class="mb-3">
                            <span class="badge bg-primary me-2">
                                ⏳ @task.CompletedHours / @task.EstimationHours hrs
                            </span>
                            <span class="badge bg-info text-dark">
                                👤 @task.AssignedUserName
                            </span>
                        </div>

                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a asp-action="Details" asp-route-id="@task.Id"
                               class="btn btn-outline-primary btn-sm">
                                🔎 Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@task.Id"
                               class="btn btn-outline-warning btn-sm">
                                ✏️ Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@task.Id"
                               class="btn btn-outline-danger btn-sm">
                                🗑 Delete
                            </a>
                            <a asp-action="Assign" asp-route-id="@task.Id"
                               class="btn btn-outline-secondary btn-sm">
                                👥 Assign
                            </a>
                            <a asp-action="UpdateHours" asp-route-id="@task.Id"
                               class="btn btn-outline-dark btn-sm">
                                ⌛ Update
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
