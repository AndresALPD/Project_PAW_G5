@{
    ViewData["Title"] = "Boards";
}

<h2 class="mb-4 text-center">Board Options</h2>

<div class="row justify-content-center">
    <div class="col-md-4 mb-4">
        <a href="/SprintBacklog" class="text-decoration-none text-white">
            <div class="dashboard-card bg-tasks text-center">
                <i class="fas fa-tasks fa-2x mb-2"></i>
                <h5>Work Items</h5>
                <p>View and manage work-related items.</p>
            </div>
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="/ProductBacklog" class="text-decoration-none text-white">
            <div class="dashboard-card bg-board text-center">
                <i class="fas fa-list fa-2x mb-2"></i>
                <h5>Backlog</h5>
                <p>Review the project backlog.</p>
            </div>
        </a>
    </div>

    <div class="col-md-4 mb-4">
        <a href="/Sprints" class="text-decoration-none text-white">
            <div class="dashboard-card bg-users text-center">
                <i class="fas fa-stopwatch fa-2x mb-2"></i>
                <h5>Sprints</h5>
                <p>Manage and track project sprints.</p>
            </div>
        </a>
    </div>
