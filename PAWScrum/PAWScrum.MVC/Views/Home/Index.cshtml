@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard">
    <div class="welcome-section">
        <h2>Welcome back, <span class="username">@User.Identity.Name</span>!</h2>
        <p class="lead">Here’s a quick overview of your PAWScrum environment.</p>
    </div>

    <div class="row">

        <div class="col-md-6 mb-4">
            <a asp-controller="Tasks" asp-action="Index" class="text-decoration-none text-dark">
                <div class="dashboard-card bg-tasks">
                    <i class="fas fa-tasks"></i>
                    <h5>My Tasks</h5>
                    <p>Manage and track your assignments.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 mb-4">
            <a asp-controller="Boards" asp-action="Index" class="text-decoration-none text-dark">
                <div class="dashboard-card bg-board">
                    <i class="fas fa-columns"></i>
                    <h5>Boards</h5>
                    <p>Organize work in agile TaskBoard.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 mb-4">
            <a asp-controller="ActivityLog" asp-action="Index" class="text-decoration-none text-dark">
                <div class="dashboard-card bg-activity">
                    <i class="fas fa-bolt"></i>
                    <h5>Activity</h5>
                    <p>See recent changes and comments.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 mb-4">
            <a asp-controller="Profile" asp-action="Index" class="text-decoration-none text-dark">
                <div class="dashboard-card bg-settings">
                    <i class="fas fa-cogs"></i>
                    <h5>Settings</h5>
                    <p>Manage preferences and configurations.</p>
                </div>
            </a>
        </div>

    </div>
</div>