@model List<PAWScrum.Models.DTOs.Sprints.SprintDto>
@{
    ViewData["Title"] = "Sprints";
    var today = DateOnly.FromDateTime(DateTime.Today);
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Sprint Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSprintModal">
            <i class="fas fa-plus-circle"></i> New Sprint
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model == null || Model.Count == 0)
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="fas fa-road fa-3x text-muted"></i>
                </div>
                <h3>No sprints registered</h3>
                <p>Create your first sprint using the "New Sprint" button.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Project</th>
                            <th>Start / End Date</th>
                            <th>Goal</th>
                            <th style="width:150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.SprintId</td>
                                <td><strong>@s.Name</strong></td>
                                <td>@s.ProjectId</td>
                                <td>
                                    <small class="text-muted">Start: @s.StartDate?.ToString("dd MMM yyyy")</small><br />
                                    <small class="text-muted">End: @s.EndDate?.ToString("dd MMM yyyy")</small>
                                </td>
                                <td class="text-truncate" style="max-width: 260px;" title="@s.Goal">@s.Goal</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@s.SprintId" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@s.SprintId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="createSprintModal" tabindex="-1" aria-labelledby="createSprintModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="createSprintModalLabel">New Sprint</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Project</label>
                            <select name="ProjectId" class="form-select" asp-items="ViewBag.Projects" required>
                                <option value="">-- Select a project --</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Sprint Name</label>
                            <input name="Name" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <input name="StartDate" type="date" class="form-control"
                                   value="@today.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <input name="EndDate" type="date" class="form-control"
                                   value="@today.AddDays(7).ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Goal</label>
                            <textarea name="Goal" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Sprint</button>
                </div>
            </form>
        </div>
    </div>
</div>