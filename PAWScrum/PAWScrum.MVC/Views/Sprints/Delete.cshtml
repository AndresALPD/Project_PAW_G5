@model PAWScrum.Models.DTOs.Sprints.SprintDto

@{
    ViewData["Title"] = "Delete Sprint";
}

<h2>Delete Sprint</h2>

<h4>Are you sure you want to delete this sprint?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>

        <dt class="col-sm-2">Goal</dt>
        <dd class="col-sm-10">@Model.Goal</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SprintId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>