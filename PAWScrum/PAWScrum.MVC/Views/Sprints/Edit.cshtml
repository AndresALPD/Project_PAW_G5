@model PAWScrum.Models.Sprints

@{
    ViewData["Title"] = "Edit Sprint";
}

<h2>Edit Sprint</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SprintId" />

    <div class="form-group">
        <label>Project</label>
        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Projects"></select>
    </div>

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Goal</label>
        <textarea asp-for="Goal" class="form-control"></textarea>
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>