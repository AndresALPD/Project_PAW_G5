@model PAWScrum.Models.DTOs.ProductBacklog.ProductBacklogCreateDto
@{
    ViewData["Title"] = "Edit Backlog Item";
}

<div class="modal fade" id="editHuModal" tabindex="-1" aria-labelledby="editHuModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="Edit" asp-route-id="@ViewBag.ItemId" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="editHuModalLabel">Edit Backlog Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Project</label>
                            <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.Projects"></select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Priority (1–5)</label>
                            <select asp-for="Priority" class="form-select">
                                <option value="1">1 low</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5 high</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option>To Do</option>
                                <option>In Progress</option>
                                <option>Done</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <a asp-action="Index" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var el = document.getElementById('editHuModal');
            var modal = new bootstrap.Modal(el, { backdrop: 'static' });
            modal.show();

            el.addEventListener('hidden.bs.modal', function () {
                window.location.href = '@Url.Action("Index", "ProductBacklog")';
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}