@model PAWScrum.Models.DTOs.ProductBacklog.ProductBacklogDto
@{
    ViewData["Title"] = "Delete Backlog Item";
}

<div class="modal fade" id="deleteHuModal" tabindex="-1" aria-labelledby="deleteHuModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-danger">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ItemId" />

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteHuModalLabel">Delete Backlog Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="fw-bold text-danger mb-3">Are you sure you want to delete this item?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Priority</dt>
                        <dd class="col-sm-8">@Model.Priority</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Project</dt>
                        <dd class="col-sm-8">@Model.ProjectId</dd>
                    </dl>
                </div>

                <div class="modal-footer">
                    <a asp-action="Index" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var el = document.getElementById('deleteHuModal');
            var modal = new bootstrap.Modal(el, { backdrop: 'static' });
            modal.show();

            el.addEventListener('hidden.bs.modal', function () {
                window.location.href = '@Url.Action("Index", "ProductBacklog")';
            });
        });
    </script>
}